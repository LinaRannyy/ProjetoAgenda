<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8 my-5">
            <div class="card">
                <div class="card-body p-4 p-md-5">
                    <h1 class="text-center mb-4">Bem-vindo</h1>
                    <p class="text-center lead mb-5">FaÃ§a login ou cadastre-se para continuar</p>

                    <%- include('includes/messages') %>

                    <div class="row">
                        <div class="col-lg-6 mb-4 mb-lg-0">
                            <div class="p-4 p-md-5" style="background-color: var(--background-color); border-radius: var(--border-radius);">
                                <h4 class="mb-4">Cadastre-se</h4>
                                <p class="mb-4 text-muted">Crie sua conta agora mesmo</p>
                                <form class="form-cadastro" action="/login/register" method="post">
                                    <div class="form-group mb-4"> 
                                        <label class="font-weight-medium">Email</label>
                                        <input type="email" class="form-control" name="email">
                                    </div>
                                    <div class="form-group mb-4">
                                        <label class="font-weight-medium">Senha</label>
                                        <input type="password" class="form-control" name="password">
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-block">Cadastrar</button>
                                </form>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="p-4 p-md-5" style="background-color: var(--background-color); border-radius: var(--border-radius);">
                                <h4 class="mb-4">Login</h4>
                                <p class="mb-4 text-muted">Acesse sua conta</p>
                                <form class="form-login" action="/login/login" method="post">
                                    <div class="form-group mb-4"> 
                                        <label class="font-weight-medium">Email</label>
                                        <input type="email" class="form-control" name="email">
                                    </div>
                                    <div class="form-group mb-4">
                                        <label class="font-weight-medium">Senha</label>
                                        <input type="password" class="form-control" name="password">
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-block">Entrar</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('includes/footer') %>
