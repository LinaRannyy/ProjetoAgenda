<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
            <h1 class="text-center"> Criar ou Entrar em conta </h1>
            <p class="text-center lead">Faça login ou cadastre-se</p>

            <%- include('includes/messages') %>


            <div class="row">
                <div class="col-lg my-5">
                    <h4>Faça seu cadastro</h4>
                    <p>Se você ainda não possui uma conta faça seu cadastro</p>
                    <form class="form-cadastro"  action="/login/register" method="post">
                        <div class="form-group"> 
                          <label>Endereço de Email</label>
                          <input type="email" class="form-control" name="email">
                        </div>
                        <div class="form-group">
                          <label>Senha</label>
                          <input type="password" class="form-control" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </form>

                </div>


                <div class="col-lg my-5">
                    <h4>Faça login</h4>
                    <p>Se você já tem uma conta, faça login abaixo</p>

                    <form class="form-login" action="/login/login" method="post"><!-- rota que vai receber o post-->
                        <div class="form-group"> 
                          <label>Endereço de Email</label>
                          <input type="email" class="form-control" name="email">
                        </div>
                        <div class="form-group">
                            <label>Senha</label>
                            <input type="password" class="form-control" name="password">
                          </div>

                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </form>
                        

                </div>
            </div>
        </div>

        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer') %>
